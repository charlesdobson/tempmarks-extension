{
    "manifest_version": 2,
    "name": "TempMarks",
    "description": "A place to store temporary bookmarks for tabs you're not quite finished with.",
    "version": "1.0",
    "author": "Charles Dobson",

    "icons": {
        "128": "images/icons/icon-128.png",
        "48": "images/icons/icon-48.png"
    },

    "browser_action": {
        "default_title": "TempMarks",
        "default_icon": "images/icons/icon-128.png",
        "default_popup": "popup/popup.html"
    },

    "permissions": [
        "activeTab",
        "tabs"
    ]
}